# ==============================================
# ADAShield Environment Configuration
# ==============================================
# Copy this file to .env and update values for your environment

# ==============================================
# Application Environment
# ==============================================
NODE_ENV=development
LOG_LEVEL=info

# ==============================================
# PostgreSQL Database
# ==============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=adashield
POSTGRES_PORT=5432

# Database connection URL (used by Prisma and application)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/adashield?schema=public

# ==============================================
# Redis Cache & Queue
# ==============================================
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/0

# ==============================================
# MinIO S3-Compatible Storage
# ==============================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# S3 Configuration (for application)
# Use the same port as MINIO_PORT for local development
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=adashield
# IMPORTANT: Must be true for MinIO to work with path-style URLs
S3_FORCE_PATH_STYLE=true

# ==============================================
# API Service Configuration
# ==============================================
API_PORT=3080
API_PREFIX=/api/v1
COOKIE_SECRET=change-me-in-production-use-strong-secret
CORS_ORIGIN=http://localhost:3000

# Email Encryption Key (32 bytes / 64 hex characters for AES-256)
# Generate with: openssl rand -hex 32
EMAIL_ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# ==============================================
# Web Frontend Configuration
# ==============================================
WEB_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:3080
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=

# Google Tag Manager container ID (format: GTM-XXXXXXX)
# Get your GTM ID at: https://tagmanager.google.com
# Used for centralized analytics and tracking management
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Google Analytics 4 measurement ID (format: G-XXXXXXXXXX)
# Get your GA4 ID at: https://analytics.google.com
# Used for detailed analytics tracking and reporting
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Enable/disable analytics tracking globally
# Set to 'false' in development or 'true' in production
# Defaults to false if not set, respecting user privacy
NEXT_PUBLIC_ANALYTICS_ENABLED=true

# ==============================================
# Worker Configuration
# ==============================================
WORKER_CONCURRENCY=5
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000

# ==============================================
# Email Configuration (Optional)
# ==============================================
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=user@example.com
# SMTP_PASSWORD=password
# SMTP_FROM=noreply@adashield.com

# ==============================================
# Production Environment Variables
# ==============================================
# For production deployment, also set:
# - Strong COOKIE_SECRET (use: openssl rand -base64 32)
# - Strong POSTGRES_PASSWORD
# - Strong MINIO_ROOT_PASSWORD
# - Proper CORS_ORIGIN (your domain)
# - NEXT_PUBLIC_API_URL (your API domain)
# - NEXT_PUBLIC_RECAPTCHA_SITE_KEY (if using reCAPTCHA)
# - EMAIL_* variables (for transactional emails)
