# Server Configuration
NODE_ENV=development
PORT=3080
HOST=0.0.0.0

# Application Environment
# local = skip reCAPTCHA validation (for development)
# prod = require reCAPTCHA validation (for production)
APP_ENV=local

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info

# API Configuration
API_PREFIX=/api/v1

# Security
COOKIE_SECRET=your-secret-key-here-change-in-production
JWT_SECRET=your-jwt-secret-here-change-in-production
EMAIL_ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# Database Configuration (Docker: localhost:5432)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/adashield?schema=public

# Redis Configuration (Docker: localhost:6379)
# Format: redis://[:password@]host[:port][/db]
REDIS_URL=redis://localhost:6379/0

# S3 Storage Configuration
# For MinIO (local development):
#   S3_ENDPOINT=http://localhost:9000
#   S3_FORCE_PATH_STYLE=true
# For AWS S3 (production):
#   S3_ENDPOINT= (leave empty, uses default AWS endpoint)
#   S3_FORCE_PATH_STYLE=false

# Development (MinIO)
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=adashield
S3_FORCE_PATH_STYLE=true

# Production (AWS S3 + Cloudflare CDN) - uncomment and configure:
# S3_ENDPOINT=
# S3_REGION=us-east-1
# S3_ACCESS_KEY=<from .credential/aws-credential.txt>
# S3_SECRET_KEY=<from .credential/aws-credential.txt>
# S3_BUCKET=assets.adashield.dev
# S3_FORCE_PATH_STYLE=false
# S3_PUBLIC_URL=https://assets.adashield.dev

# Email Provider Routing Configuration
# Default provider when no pattern matches (SES or SENDGRID)
EMAIL_DEFAULT_PROVIDER=SES

# SendGrid routing patterns (comma-separated, supports wildcards)
# Emails matching these patterns will be sent via SendGrid
EMAIL_SENDGRID_PATTERNS=*@microsoft.com,*@outlook.com,*@hotmail.com

# SES routing patterns (comma-separated, supports wildcards)
# Emails matching these patterns will be sent via AWS SES
EMAIL_SES_PATTERNS=*@*.edu

# AWS SES Configuration
# AWS_SES_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key-id
# AWS_SECRET_ACCESS_KEY=your-secret-access-key

# SendGrid Configuration
# SENDGRID_API_KEY=your-sendgrid-api-key

# AI Early Bird Campaign Configuration
# Feature flag to enable/disable AI campaign features
AI_EARLY_BIRD_ENABLED=false
# Default average tokens per scan for slot calculation
AI_DEFAULT_TOKENS_PER_SCAN=100
# Stale scan threshold in hours (scans older than this are marked as failed)
AI_STALE_THRESHOLD_HOURS=48
