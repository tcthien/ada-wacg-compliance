# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info

# API Configuration
API_PREFIX=/api/v1

# Security
COOKIE_SECRET=your-secret-key-here-change-in-production
JWT_SECRET=your-jwt-secret-here-change-in-production

# Database Configuration (Docker: localhost:5432)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/adashield?schema=public

# Redis Configuration (Docker: localhost:6379)
# Format: redis://[:password@]host[:port][/db]
REDIS_URL=redis://localhost:6379/0

# MinIO S3 Configuration (Docker: localhost:9000)
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=adashield
S3_FORCE_PATH_STYLE=true
