# ==============================================
# ADAShield Web Frontend - Environment Configuration
# ==============================================
# Copy this file to .env.local and update values for your environment

# ==============================================
# Application Environment
# ==============================================
# local = skip reCAPTCHA validation (for development)
# prod = require reCAPTCHA validation (for production)
NEXT_PUBLIC_APP_ENV=local

# ==============================================
# API Configuration
# ==============================================
# Base URL for the ADAShield API server
NEXT_PUBLIC_API_URL=http://localhost:3080

# ==============================================
# Google reCAPTCHA Configuration
# ==============================================
# Google reCAPTCHA v2 site key for spam protection
# Get your keys at: https://www.google.com/recaptcha/admin
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=

# ==============================================
# Google Analytics Configuration
# ==============================================
# Google Tag Manager container ID (format: GTM-XXXXXXX)
# Get your GTM ID at: https://tagmanager.google.com
# Used for centralized analytics and tracking management
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Google Analytics 4 measurement ID (format: G-XXXXXXXXXX)
# Get your GA4 ID at: https://analytics.google.com
# Used for detailed analytics tracking and reporting
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Enable/disable analytics tracking globally
# Set to 'false' in development or 'true' in production
# Defaults to false if not set, respecting user privacy
NEXT_PUBLIC_ANALYTICS_ENABLED=true

# Enable debug logging for analytics events
# Set to 'true' to log all events to browser console
# Useful for development and testing
NEXT_PUBLIC_ANALYTICS_DEBUG=false

# ==============================================
# AI Early Bird Campaign Configuration
# ==============================================
# Feature flag to show/hide AI campaign UI elements
# Set to 'true' to display AI opt-in checkbox and campaign banner
NEXT_PUBLIC_AI_EARLY_BIRD_ENABLED=true

# ==============================================
# Feature Flags
# ==============================================
# Enable Discovery Flow V2 redesign
# When enabled, users will see the improved discovery flow with better UX,
# enhanced validation, and improved accessibility
# Set to 'false' to use the legacy discovery flow
# Used for gradual rollout and A/B testing
NEXT_PUBLIC_DISCOVERY_V2_ENABLED=false
