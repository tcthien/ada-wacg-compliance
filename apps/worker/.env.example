# Environment
NODE_ENV=development
LOG_LEVEL=info

# Redis Configuration
# REDIS_URL=redis://localhost:6379

# Worker Configuration
WORKER_CONCURRENCY=5

# S3 Storage Configuration
# For MinIO (local development):
#   S3_ENDPOINT=http://localhost:9000
#   S3_FORCE_PATH_STYLE=true
# For AWS S3 (production):
#   S3_ENDPOINT= (leave empty)
#   S3_FORCE_PATH_STYLE=false
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=adashield
S3_FORCE_PATH_STYLE=true
# S3_PUBLIC_URL=  (leave empty for MinIO, set to CDN URL for production)

# Playwright Configuration
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000

# Email Configuration (for email worker)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=user@example.com
# SMTP_PASSWORD=password
# SMTP_FROM=noreply@adashield.com

# Email Provider Routing Configuration
# Default provider when no pattern matches (SMTP, SES, or SENDGRID)
# Use SMTP for local development with Mailpit
EMAIL_DEFAULT_PROVIDER=SMTP

# SMTP Configuration (for local development with Mailpit)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false

# SendGrid routing patterns (comma-separated, supports wildcards)
# Emails matching these patterns will be sent via SendGrid
EMAIL_SENDGRID_PATTERNS=*@microsoft.com,*@outlook.com,*@hotmail.com

# SES routing patterns (comma-separated, supports wildcards)
# Emails matching these patterns will be sent via AWS SES
EMAIL_SES_PATTERNS=*@*.edu

# AWS SES Configuration
# AWS_SES_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key-id
# AWS_SECRET_ACCESS_KEY=your-secret-access-key

# SendGrid Configuration
# SENDGRID_API_KEY=your-sendgrid-api-key
