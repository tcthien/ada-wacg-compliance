{
  "name": "@adashield/worker",
  "version": "0.1.0",
  "private": true,
  "description": "ADAShield Background Worker - Processes accessibility scanning jobs",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run --exclude 'src/**/*.integration.test.ts'",
    "test:integration": "vitest run src/**/*.integration.test.ts",
    "clean": "rm -rf dist .turbo node_modules"
  },
  "dependencies": {
    "@adashield/core": "workspace:*",
    "@aws-sdk/client-ses": "^3.700.0",
    "@axe-core/playwright": "^4.10.1",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "axe-core": "^4.10.2",
    "bullmq": "^5.66.3",
    "dotenv": "^16.0.0",
    "ioredis": "^5.8.2",
    "isomorphic-dompurify": "^2.22.0",
    "js-yaml": "^4.1.0",
    "minimatch": "^9.0.0",
    "nodemailer": "^6.10.1",
    "pdfkit": "^0.16.0",
    "pg": "^8.16.3",
    "playwright": "^1.49.1",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^6.4.21",
    "@types/pdfkit": "^0.13.8",
    "@types/pg": "^8.16.0",
    "@vitest/coverage-v8": "^4.0.16",
    "prisma": "^7.2.0",
    "tsx": "^4.0.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
